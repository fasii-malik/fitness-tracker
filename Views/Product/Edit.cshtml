@model FitnessTracker.Models.ProductVM

<body class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1 class="mt-3">Edit Product</h1>
            </div>

        </div>
    </div>

    <div class="container">

        <div class="row">

            <div class="card shadow" style="width: 38rem;">
                <div class="card-body">
                    <form asp-controller="Product" asp-action="Edit" enctype="multipart/form-data" method="post">
                        <div class="mb-3">
                            <input asp-for="Products.Id" hidden/>
                            <label asp-for="Products.Name" class="form-label">Name</label>
                            <input asp-for="Products.Name" class="form-control shadow">


                            <label asp-for="Products.Price" class="form-label">Price</label>
                            <input asp-for="Products.Price" class="form-control shadow">

                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Category</label>
                                @Html.DropDownListFor(u => u.Products.CategoryId, Model.CategoriesList,
                                         "-Select a Category-",
                                         new { @class = "form-select form-control shadow", })
                            </div>

                            <div class="form-group">
                                <label asp-for="Products.Description">Description</label>
                                <textarea asp-for="Products.Description" class="form-control shadow" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>

                            <label class="form-label" asp-for="Images">Images</label>
                            <input asp-for="Images" class="form-control shadow" type="file" name="Images" multiple><br><br>

                            
                        </div>
                        <a class="btn btn-primary shadow" asp-action="Index"><i class="bi bi-caret-left"></i>Back</a>
                        <button type="submit" class="btn btn-success shadow">Edit</button>
                    </form>
                </div>
            </div>
            <div class="col-6">
                @if (Model.Products.HomeImgUrl != null)
                {
                    <div style="position:absolute; right:10%; top:20%;">
                        <img src="@Url.Content($"~/Images/{Model.Products.HomeImgUrl}")" class="rounded img-fluid" width="150" height="100" />

                    </div>                    
                }
            </div>
        </div><!--Row Class-->
       
       
    </div>

    

</body>