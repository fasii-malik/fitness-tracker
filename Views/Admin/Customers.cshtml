@{
    ViewData["Title"] = "Customers Table";
    Layout = "~/Views/Shared/_AdminMasterLayout.cshtml";
}

@using FitnessTracker.Models.Entities
@using Microsoft.AspNetCore.Identity

@model IEnumerable<ApplicationUser>


<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<div class="m-3">
    <h3 class="mb-0 h4 font-weight-bolder">Authors Table</h3>
</div>
<div class="row">
    
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Users</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Author</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Function</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Employed</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img src="~/admintheme1/assets/img/illustrations/undraw_male.png" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@customer.FirstName @customer.LastName</h6>
                                                <p class="text-xs text-secondary mb-0">@customer.Email</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">Manager</p>
                                        <p class="text-xs text-secondary mb-0">Organization</p>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span id="userStatus-@customer.Id" class="badge badge-sm @(customer.IsOnline ? "bg-gradient-success" : "bg-gradient-secondary")">
                                            @(customer.IsOnline ? "Online" : "Offline")
                                        </span>

                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@customer.StartDate.ToShortDateString()</span>
                                    </td>
                                    <td class="align-middle">
                                        <a  class="text-secondary font-weight-bold text-xs p-1" data-toggle="tooltip" data-original-title="Edit user" asp-controller="Admin" asp-action="EditCustomer" asp-route-id="@customer.Id">
                                            Edit
                                        </a>
                                        <a  class="text-secondary font-weight-bold text-xs p-1" data-toggle="tooltip" data-original-title="Edit user" asp-controller="Admin" asp-action="Delete" asp-route-id="@customer.Id">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





