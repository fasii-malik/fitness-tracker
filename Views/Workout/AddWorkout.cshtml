@model FitnessTracker.Models.WorkoutVM

<body class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1 class="mt-3">Add Exercise</h1>
            </div>
        </div>
    </div>

    <div class="container">

        <div class="row">

            <div class="card shadow" style="width: 38rem;">
                <div class="card-body">
                    <form asp-controller="Workout" asp-action="AddWorkout" enctype="multipart/form-data" method="post">
                        <div class="mb-3">
                            <label asp-for="Workout.Name" class="form-label">Name</label>
                            <input asp-for="Workout.Name" type="text" class="form-control shadow">
                            

                            <label asp-for="Workout.Reps" class="form-label">Reps</label>
                            <input asp-for="Workout.Reps" class="form-control shadow">

                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Category</label>
                                <select asp-for="Workout.WorkoutCategoryId" class="form-select">
                                    <option value="">Select Role</option>
                                    @foreach (var item in Model.workoutCategoryList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }                                                                
                                </select>
                               
                            </div>

                            <div class="form-group">
                                <label asp-for="Workout.Description" >Description</label>
                                <textarea asp-for="Workout.Description"  class="form-control shadow" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                            
                            <label asp-for="Images" class="form-label" >Images</label>
                            <input asp-for="Images" class="form-control shadow" type="file" name="Images" multiple><br><br>
                           
                            <label asp-for="Workout.PrimaryMuscleWorked" class="form-label">Primary Muscle Worked</label>
                            <input asp-for="Workout.PrimaryMuscleWorked" type="text" class="form-control shadow">

                            <label asp-for="Workout.SecondaryMuscleWorked" class="form-label">Secondary Muscle Worked</label>
                            <input asp-for="Workout.SecondaryMuscleWorked" type="text" class="form-control shadow">
                            
                        </div>
                        <a class="btn btn-primary shadow" asp-controller="Workout" asp-action="WorkoutIndex"><i class="bi bi-caret-left"></i>Back</a>
                        <button type="submit" class="btn btn-success shadow">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>