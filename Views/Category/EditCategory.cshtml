@{
    ViewData["Title"] = "Edit Category";
}
@model FitnessTracker.Models.Entities.Category
<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1 class="mt-3">Edit Category</h1>
            </div>

        </div>
    </div>

    <div class="container">

        <div class="row">

            <div class="card shadow" style="width: 38rem;">
                <div class="card-body">
                    <form asp-action="EditCategory">
                        <div class="mb-3">
                            <label class="form-label">ID</label>
                            <input class="form-control shadow" type="text" asp-for="Id" readonly/>
                            <label for="exampleInputText" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control shadow" placeholder="Max 30 Characters">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <a class="btn btn-primary shadow" asp-action="Index"><i class="bi bi-caret-left"></i>Back</a>
                        <button type="submit" class="btn btn-success shadow">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>