@model IEnumerable<FitnessTracker.Models.Entities.UserOrderHeader>

<div class="container">
    <h1 class="text-center m-3">Order History</h1>
</div>
<div class="card-body">
    @if(Model.Count() > 0)
    {
        <table class="table table-striped table-bordered p-4 table-dark text-center shadow">
            <thead>
                <tr>
                    <th>ReceivedDate</th>
                    <th>Name</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.DateOfOrder.ToShortDateString()</td>
                    <td>@item.Name</td>
                    <td>@item.TotalOrderAmount</td>
                    <td>@item.OrderStatus</td>
                    <td><a class="btn btn-secondary">View Details</a></td>
                </tr>                
            }
        </table>
    }
    else
    {
        <h1 class="text-center m-5">There is no Order History!</h1>
    }
</div>